{
  "name": "noclosure-resin-bridge",
  "version": "1.0.0",
  "description": "https://github.com/mikesamuel/noclosure-resin-bridge.git",
  "main": "index.js",
  "scripts": {
    "cover": "istanbul cover _mocha",
    "coveralls": "npm run cover -- --report lcovonly && cat ./coverage/lcov.info | coveralls",
    "lint": "./node_modules/.bin/eslint .",
    "prepack": "npm run lint && npm test",
    "test": "mocha"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mikesamuel/noclosure-resin-bridge.git"
  },
  "keywords": [
    "security",
    "polymer",
    "polymer-resin"
  ],
  "author": "@mikesamuel",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/mikesamuel/noclosure-resin-bridge/issues"
  },
  "homepage": "https://github.com/mikesamuel/noclosure-resin-bridge#readme",
  "devDependencies": {
    "chai": "^4.2.0",
    "coveralls": "^3.0.2",
    "eslint": "^5.7.0",
    "eslint-config-strict": "^14.0.1",
    "istanbul": "^0.4.5",
    "mocha": "^5.2.0",
    "pre-commit": "^1.2.2"
  },
  "pre-commit": [
    "prepack"
  ],
  "eslintIgnore": [
    "/coverage/**"
  ],
  "eslintConfig": {
    "extends": [
      "strict"
    ],
    "parserOptions": {
      "ecmaVersion": 5,
      "sourceType": "source",
      "ecmaFeatures": {
        "impliedStrict": false
      }
    },
    "rules": {
      "no-confusing-arrow": [
        "error",
        {
          "allowParens": true
        }
      ],
      "no-warning-comments": [
        "error",
        {
          "terms": [
            "do not submit"
          ]
        }
      ],
      "no-void": "off",
      "strict": [
        "error",
        "global"
      ]
    }
  }
}
